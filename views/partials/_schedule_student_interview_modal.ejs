<div
  class="modal fade"
  id="schedule-student-interview-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add-student-interview-header">
          Add student
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          action="/interview/schedule_interview"
          method="post"
          id="schedule-interview-form"
        >
          <div class="form-group">
            <label for="interview-student-email">email</label>
            <input
              id="interview-student-email"
              name="email"
              type="email"
              placeholder="Enter student email"
              required
            />
          </div>
          <div class="form-group">
            <label for="interview-result" class="mr-3">Result</label>
            <select
              name="result"
              class="placement--options"
              id="interview-result"
            >
              <option value="pass">Pass</option>
              <option value="fail">Fail</option>
              <option value="on hold">On Hold</option>
              <option value="not attempted">Not Attempted</option>
            </select>
          </div>
          <input name="company_name" type="hidden" value="" />
          <div class="modal-footer">
            <button
              type="button"
              class="btn secondary-btn"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" class="btn primary-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
