<div class="login-container">
  <div class="login-form">
    <div class="heading signup-form-heading"><center>Login</center></div>
    <form action="/user/create-session" method="post" class="mt-4">
      <div class="form-group">
        <label for="login-email">Email</label>
        <input
          name="email"
          id="login-email"
          type="email"
          placeholder="Enter your email"
          required
        />
      </div>
      <div class="form-group">
        <label for="login-password">Password</label>
        <input
          id="login-password"
          name="password"
          placeholder="Enter your password"
          type="password"
          required
        />
      </div>
      <div class="mt-5">
        <button type="submit" class="btn">Login</button>
      </div>
    </form>
    <div class="mt-2">
      <span class="mr-1">New user?</span
      ><span><a href="/user/signup">Register</a></span>
    </div>
  </div>
</div>
